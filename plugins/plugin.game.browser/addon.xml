<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.game.browser"
       name="Game Browser"
       version="0.2.5"
       provider-name="Zomboided">
  <requires>
    <import addon="xbmc.python" version="2.7.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Game Browser</summary>
    <description lang="en">Display all games on a single list and launch with a defined libretro core.</description>
  </extension>
</addon>
