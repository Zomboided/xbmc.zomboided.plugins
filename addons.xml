<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.game.browser"
       name="Game Browser"
       version="0.3.1"
       provider-name="Zomboided">
  <requires>
    <import addon="xbmc.python" version="2.7.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Game Browser</summary>
    <description lang="en">Display all games on a single list and launch with a defined libretro core.</description>
  </extension>
</addon>

<addon id="plugin.video.kidstv"
       name="Kids TV"
       version="2.0.1"
       provider-name="Zomboided">
  <requires>
    <import addon="xbmc.python" version="2.7.0"/>
    <import addon="plugin.video.emby.movies" version="0.14" />
    <import addon="plugin.video.emby.tvshows" version="0.14" />
  </requires>
  <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Kids TV</summary>
    <description lang="en">Lazy baby sitting for technologically aware parents.</description>
  </extension>
</addon>

<addon id="service.vpn.manager"
       name="VPN Manager for OpenVPN"
       version="6.3.5"
       provider-name="Zomboided">
  <requires>
    <import addon="xbmc.python" version="2.7.0"/>
  </requires>
  <extension point="xbmc.service" library="service.py" start="startup" />
  <extension point="xbmc.python.module" library="libs" />
  <extension point="xbmc.python.pluginsource" library="addon.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Configure and manage VPN connections using openVPN</summary>
    <description lang="en">Establish a connection to a VPN provider and automatically switch VPN locations based on the add-on being used.</description>
  </extension>
</addon>

<addon id="service.zomboided.tools"
       name="Zomboided Tools"
       version="0.7.3"
       provider-name="Zomboided">
  <requires>
    <import addon="xbmc.python" version="2.7.0"/>
    <import addon="script.module.pyserial" version="0.0.1"/>
  </requires>
  <extension point="xbmc.service" library="service.py" start="startup" />
  <extension point="xbmc.python.pluginsource" library="addon.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Various Kodi tools</summary>
    <description lang="en">Limit playback and play lists; trigger actions based on events and timers; sleep timer; clear caches; speed test LAN connections.</description>
  </extension>
</addon>
</addons>
